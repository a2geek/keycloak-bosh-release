---
name: keycloak

templates:
  bpm.yml.erb: config/bpm.yml
  keycloak.conf.erb: config/keycloak.conf
  pre-start.sh.erb: bin/pre-start
  private.pem.erb: config/private.pem
  public.pem.erb: config/public.pem
  start.sh.erb: bin/start

packages:
- keycloak
- openjdk

properties:
  database.type:
    description: The database vendor.
    example: postgres
  database.user:
    description: The username of the database user.
    example: keycloak
  database.password:
    description: The password of the database user.
  database.url:
    description: The full database JDBC URL. If not provided, a default URL is set based on the selected database vendor.
    example: jdbc:postgresql://127.0.0.1:5432/keycloakdb
  hostname:
    description: Hostname for the Keycloak server.
  https.certificate:
    description: "HTTPS public certificate (PEM format) to use. Default is self-signed, generated by bosh."
  https.private_key:
    description: "HTTPS private key (PEM format) to use. Default is self-signed, generated by bosh."
  admin.username:
    description: Bootstrap admin username.
    example: admin
  admin.password:
    description: Bootstrap admin password.